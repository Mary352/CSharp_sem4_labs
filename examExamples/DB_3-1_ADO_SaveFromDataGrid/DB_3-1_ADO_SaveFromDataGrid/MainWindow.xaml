<Window x:Class="DB_3_1_ADO_SaveFromDataGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DB_3_1_ADO_SaveFromDataGrid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <DataGrid x:Name="datagrid" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Surname"></DataGridTextColumn>
                <DataGridTextColumn Header="Name"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="saveBut" Grid.Row="1" Margin="10">Save</Button>
    </Grid>
</Window>
